i[class^="icon-"], i[class*=" icon-"]
  display inline-block

.icon-spinner
  animation loading 1s infinite linear



a
  color $primaryColor
  cursor pointer
  text-decoration none
  &:hover
    text-decoration underline
body, html
  height 100%
body
  bodyGradient()
  background-attachment fixed
  color $fontColor
  font-size 14px
  font-family 'Lucida Grande', 'Lucida Sans', 'Lucida Sans Unicode', Arial, Helvetica, Tahoma, sans-serif
  padding 0
  margin 0

footer
  margin-top 2em
  text-align center
  ul
    border-top #eee solid 1px
    padding 0
    margin 0 auto
    li
      display inline-block
      margin .5em 1em

      a
        text-decoration none
        font-weight 700
        color $fontColor


input, textarea, select
  background #fff
  border 1px solid #ccc
  border-radius 0px
  padding .5em
  &:focus
    outline 0



.btn
  background $primaryColorLight
  color #fff
  cursor pointer
  display inline-block
  padding 0.5em 1em
  &:hover
    background $primaryColor

.content
  bottom 0
  left 80px
  overflow-y auto
  padding 1em 2em
  position absolute!important
  right 300px
  top 0

.dropdown
  background-color #fff
  border #eee solid 1px
  box-shadow 0 2px 4px rgba(0, 0, 0, .1)
  display block
  list-style none
  margin 0
  padding 0
  position fixed
  z-index 300
  li
    color $fontColorDark
    cursor pointer
    display block
    padding .5em 1em
    text-decoration none
    &:hover
      background #d3e1e7
    &:active, &:visited
      color $primaryColor
.drop-close
  bottom 0
  left 0
  position fixed
  right 0
  top 0
  z-index 199


.noselect
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

.select
  -webkit-touch-callout initial
  -webkit-user-select initial
  -khtml-user-select initial
  -moz-user-select initial
  -ms-user-select initial
  user-select initial

.live-soon
  height 100%
  left 0
  position absolute
  top 0
  width 100%
  .live-bg
    background no-repeat center url('~client/img/live.png')
    background-size cover
    height 100%
    opacity 0.2
    position absolute
    width 100%

  h1
    color #fff
    font-size 4em
    padding-top 1em
    text-align center


.message-bar
  background $primaryColor
  color #fff
  padding 1em 314px 1em 100px
  position relative
  z-index 400
  p
    font-size 0.9em
    margin 0
  .close
    cursor pointer
    position absolute
    right 300px
    top 1em

.page
  background #fff
  border 1px solid #ccc
  padding 1em
  margin 0 auto
  max-width 800px

.playlist
  h1
    font-size 2rem
    margin 0
  .header-playlist
    padding 1em
    border-bottom 1px solid $dividerColor
    margin-bottom 2em
  .h-buttons .btn
    margin-right 0.7em


.piker
  border-radius 3px
  border 1px solid #ccc
  cursor pointer
  display inline-block
  font-size 2em
  text-align center
  vertical-align middle


.remove:hover
  color #fff
  font-weight bold


.search-page .spinner-wraper
  background rgba(0,0,0, 0.6)
  bottom 0
  font-size 2.5em
  left 0
  position absolute
  right 0
  top 0
  text-align center
  .icon-spinner
    margin-top 48%


.vr-al-helper
  display inline-block
  height 100%
  vertical-align middle

@keyframes loading {
  from {
    transform rotate(0deg)
  }
  to {
    transform rotate(360deg)
  }
}






@media $med_and_down
  .logo
    display none

  html
    min-height 100% !important
    padding-bottom $headerHeight !important

  body
    min-height 100% !important

  #app-wrapper
    min-height 100%
    footer
      display none
    header.main-header
      // background #2196F3
      background #005374
      color #fff
      height $headerHeight
      position fixed
      top 0
      width 100%
      z-index 99
      i
        cursor pointer
        font-size 1.8em
        line-height $headerHeight
        padding 0 0.6em
        margin 0

    .content
      padding 0em
      position relative!important
      right 0
      left 0
      top $headerHeight

    .message-bar
      padding 1em
      .close
        top 0.5em
        right 0.5em

    .search-page h1
      display none

    .dropdown
      bottom 0px !important
      left 0px !important
      right 0px !important
      top initial !important
      li
        font-size 1.2em
        padding 0.7em 1em

    .drop-close
      cursor pointer
      background rgba(0,0,0,0.7)

    .live-soon
      position fixed

    .piker
      border-radius 50%
      height 1.5em
      line-height 1.5em
      width 1.5em
