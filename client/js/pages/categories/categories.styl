ul.categories
	padding 0
	margin 0
	list-style none
	text-align center
	li
		background-color #ccc
		background-size contain
		border-radius 3px
		cursor pointer
		display inline-block
		height 0px
		margin 0.5em
		padding-top 22%
		position relative
		width 22%
		&:hover
			opacity 0.9

		.cont
			bottom 0
			color #fff
			height 1em
			left 0
			margin-top -0.5em
			position absolute
			right 0
			top 75%

@media $med_and_down
	.content .categories li
		margin 0.5em
		padding-top 45%
		width 45%
