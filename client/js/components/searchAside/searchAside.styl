.search-aside
  background rgba(13, 26, 33, 0.8)
  border-left 1px solid $dividerColor
  height 100%
  left -165px
  position fixed
  top 0
  transform translate3d(0, 0, 0)
  transition transform 0.2s ease-out
  width 240px
  z-index 90
  &.show
    transform translate3d(245px,0,0)

  .search-aside-content
    background #0E1F28
  .search-input
    padding .7em 1em
    position relative
    .icon-arrow-left
      display none
    input
      background none
      border 0
      font-size 1.5em
      padding 0.2em 0
      box-sizing border-box
      color $fontColor
      display block
      width 100%
    .remove
      cursor pointer
      font-size 1.5em
      height 1em
      position absolute
      right 0.5em
      top 9px
      width 1em

  ul
    list-style none
    padding 0
    margin 0
    li
      color $fontColor
      display block
      font-size .9em
      overflow hidden
      padding 0.5em 1em
      position relative
      text-overflow ellipsis
      white-space nowrap
      &:hover
        background rgba(255,255,255,0.05)
      i.icon-arrow-up-left
        position  absolute
        right 1em
        top 0.8em
      a
        color inherit
        text-decoration none
  .s-history, .s-h-clean
    display block
    padding 0.5em 1em




@media $med_and_down
  #app-wrapper
    .search-aside
      left 0
      opacity 0
      transition 0.3s opacity ease-out
      transform translate3d(0, 0, 0)
      top 0
      visibility hidden
      width 100%
      z-index 100

      &.show
        opacity 1
        transition 0.3s opacity ease-out
        visibility visible

      .search-input
        border-bottom 1px solid rgba(255,255,255,.8)
        padding .7em 1em .7em 3em
        .icon-arrow-left
          cursor pointer
          display block
          font-size 1.5em
          left 0.5em
          margin-top -0.5em
          position absolute
          top 50%
      .search-aside-body
        font-size 1.2em
